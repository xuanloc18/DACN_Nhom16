extends ../../layouts/default.pug 
include ../../mixins/box-head.pug
include ../../mixins/alert.pug

block main 
    +alert-success()
    +alert-error()

    .container.my-3 
        .row 
            .col-12 
                +box-head("Đặt hàng")
        .row 
            .col-12 
                table(class="table table-bordered")
                    thead 
                        tr 
                            th STT
                            th Ảnh
                            th Tên
                            th Giá
                            th Số lượng
                            th Tổng tiền
                    tbody
                        if(cart.products.length > 0) 
                            each item , index in cart.products
                                tr 
                                    td #{index + 1}
                                    td 
                                        img(
                                            src=item.productInfo.thumbnail 
                                            alt=item.productInfo.title
                                            width="80px"
                                        )
                                    td #{item.productInfo.title}
                                    td #{item.productInfo.newPrice.toLocaleString('vi-VN')} VNĐ
                                    td #{item.quantity}
                                    td #{item.totalPrice.toLocaleString('vi-VN')} VNĐ 

                        else 
                            tr 
                                td(
                                    colspan="7"
                                    class="text-center"
                                )   Giỏ hàng trống
                h3(class="text-right") Tổng đơn hàng : #{cart.totalPrice.toLocaleString('vi-VN')} VNĐ

    if(cart.products.length > 0)         
        .row 
            .col-8.mx-auto
                .card
                    .card-header 
                        | Nhập thông tin 
                    .card-body 
                        form(
                            id="form-order"
                            action="/checkout/order",
                            method="POST"
                        )  
                            div(class="form-group")
                                label(for="fullName") Họ tên 
                                input(
                                    type="text"
                                    class="form-control"
                                    id="fullName"
                                    name="fullName"
                                    required
                                ) 
                            div(class="form-group")
                                label(for="phone") Số điện thoại
                                input(
                                    type="text"
                                    class="form-control"
                                    id="phone"
                                    name="phone"
                                    required
                                )
                            div(class="form-group")
                                label(for="address") Địa chỉ
                                input(
                                    type="text"
                                    class="form-control"
                                    id="address"
                                    name="address"
                                    required
                                )
                            div(class="form-group")
                                label(for="totalPrice" class="d-none") Gía tiền
                                input(
                                    type="number"
                                    class="d-none"
                                    id="totalPrice"
                                    name="totalPrice"
                                    value=cart.totalPrice
                                )
                            div(class="form-group")
                                button(
                                    type="submit"
                                    form="form-order"
                                    class="btn btn-success btn-inlineblock"
                                    ) Thanh toán khi nhận hàng  
    script(src="/js/cart.js")             

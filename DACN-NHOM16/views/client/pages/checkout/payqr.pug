extends ../../layouts/default.pug 
include ../../mixins/box-head.pug
include ../../mixins/alert.pug

block main 
    +alert-success()
    +alert-error()

    .container.my-3 
        .row 
            .col-12 
                +box-head("Đặt hàng")
        .row 
            .col-12
                table(class="table table-bordered")
                    thead 
                        tr 
                            th STT
                            th Ảnh
                            th Tên
                            th Giá
                            th Số lượng
                            th Tổng tiền
                    tbody
                        if(cart.products.length > 0) 
                            each item , index in cart.products
                                tr 
                                    td #{index + 1}
                                    td 
                                        img(
                                            src=item.productInfo.thumbnail 
                                            alt=item.productInfo.title
                                            width="80px"
                                        )
                                    td #{item.productInfo.title}
                                    td #{item.productInfo.newPrice.toLocaleString('vi-VN')} VNĐ
                                    td #{item.quantity}
                                    td #{item.totalPrice.toLocaleString('vi-VN')} VNĐ  

                        else 
                            tr 
                                td(
                                    colspan="7"
                                    class="text-center"
                                ) Giỏ hàng trống
                h3(class="text-right") Tổng đơn hàng : #{cart.totalPrice.toLocaleString('vi-VN')} VNĐ

    if(cart.products.length > 0)         
        .container
            .row
                .col-9
                    .card
                        .card-header 
                            | Nhập thông tin 
                        .card-body 
                            form(
                                id="form-order"
                                action="/checkout/orderqr",
                                method="POST"
                            )  
                                div(class="form-group")
                                    label(for="fullName") Họ tên 
                                    input(
                                        type="text"
                                        class="form-control"
                                        id="fullName"
                                        name="fullName"
                                        required
                                    ) 
                                div(class="form-group")
                                    label(for="phone") Số điện thoại
                                    input(
                                        type="text"
                                        class="form-control"
                                        id="phone"
                                        name="phone"
                                        required
                                    )
                                div(class="form-group")
                                    label(for="address") Địa chỉ
                                    input(
                                        type="text"
                                        class="form-control"
                                        id="address"
                                        name="address"
                                        required
                                    )
                                div(class="form-group")
                                    input(
                                        type="number"
                                        class="d-none"
                                        id="totalPrice"
                                        name="totalPrice"
                                        value=cart.totalPrice
                                    )
                .col-3
                    .payqr 
                        img(src=`https://img.vietqr.io/image/${qrBank.BANK_ID}-${qrBank.ACCOUNT_NO}-compact2.png?amount=${cart.totalPrice}&accountName=${qrBank.ACCOUNT_NAME}` alt="")
                        
                    .btn-qr.mx-auto
                        button(
                            type="submit"
                            form="form-order"
                            class="btn btn-danger"
                        ) Kiểm tra giao dịch

    script(src="/js/cart.js")         

extends ../../layouts/default.pug 

block main 
    h1(class="mb-4") Thông tin cá nhân

    if (user.avatar) 
        img(src=user.avatar with="150px" class="mb-3")

    else 
        img(src="/admin/images/avatar.pug" 
        with="150px" class="mb-3")
    
    if (user.fullName)
        p Họ tên: <b> #{user.fullName} </b>

    if (user.email)
        p Email: <b> #{user.email} </b>

    if (user.phone)
        p Số điện thoại: <b> #{user.phone} </b>

    p 
        span Trạng thái
        span 
            <b> #{user.status === "active" ? "Hoat dong" : "Dung hoat dong"} </b>
    if (role.title)
        p Phân quyền: <b> #{role.title} </b>

    a(
        href=`${prefixAdmin}/my-account/edit`
        class="btn btn-primary"
    ) Chỉnh sửa thông tin

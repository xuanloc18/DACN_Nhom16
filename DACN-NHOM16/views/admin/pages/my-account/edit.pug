extends ../../layouts/default.pug 
include ../../mixins/alert.pug

block main 
    h1(class="mb-4") Cap nhat thong tin ca nhan

    +alert-success()
    +alert-error()

    form(
        action=`${prefixAdmin}/my-account/edit?_method=PATCH`
        method="POST"
        enctype="multipart/form-data"
        )

        div(class="form-group")
            label(for="fullName") Ho ten 
            input(
                type="text"
                class="form-control"
                id="fullName"
                name="fullName"
                required 
                value=user.fullName
            )
        div(class="form-group")
            label(for="email") Email
            input(
                type="text"
                class="form-control"
                id="email"
                name="email"
                required 
                value=user.email
            )
        div(class="form-group")
            label(for="password") Mat khau
            input(
                type="password"
                class="form-control"
                id="password"
                name="password"
                required
            )
        div(class="form-group")
            label(for="phone") So dien thoai
            input(
                type="text"
                class="form-control"
                id="phone"
                name="phone"
                required
                value=user.phone
            )
        div(class="form-group")
                label(for="avatar") Avatar
                input(
                    type="file"
                    class="form-control-file"
                    id="avatar"
                    name="avatar"
                    accept="image/*"
                    choose-img
                    )
                img(src=user.avatar, alt="your-image" preview-img)
                div(remove-preview class="hidden-remove") Bỏ chọn
        button(
                    type="submit"
                    class="btn btn-primary"
                ) Cap nhat

